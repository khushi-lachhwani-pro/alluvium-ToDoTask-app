{
    "cli": {    
      "appVersionSource": "remote"
    },
    "build": {
      "production": {
        "distribution": "internal",
        "env": {
          "NODE_ENV": "production",
          "ANDROID_HOME": "/opt/android-sdk",
          "ANDROID_SDK_ROOT": "/opt/android-sdk",
          "EXPO_NO_CACHE": "true"
        },
        "android": {
          "buildType": "apk",
          "gradleCommand": ":app:assembleRelease --stacktrace"      
        }
      }
    }
  }